
@{
    Layout = "_Layout";
}
@model Utente

<div class="pt-5">
  <h1 class="text-center">Registrazione</h1>
  
<div class="container">
                <div class="row">
                    <div class="col-md-5 mx-auto">
                        <div class="card card-body mb-5">
                                                    
                            <form action=@Url.Action("registrazione", "Utente") method="post" >
                                @Html.AntiForgeryToken()
                                <div class="form-group required">
                                    <lSabel class="d-flex w-100 flex-row align-items-center" for="username">Crea Username / Email</lSabel>
                                    <input asp-for="nomeUtente" type="text" class="d-block w-100 ">
                                    <span asp-validation-for="nomeUtente" class="text-danger"></span>
                                </div>                    
                                <div class="form-group required">
                                    <label class="d-flex w-100 flex-row align-items-center" for="password">Crea Password </label>
                                    <input asp-for="password" type="password" class="d-block w-100" >
                                    <span asp-validation-for="password" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group pt-1">
                                    <button class="btn btn-warning btn-block" type="submit">Registrati</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
</div>